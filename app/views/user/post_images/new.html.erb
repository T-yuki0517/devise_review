<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">レビュー投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @post_image.errors.any? %>
          <%= @post_image.errors.count %>件のエラーが発生しました
          <% @post_image.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @post_image, local:true do |f| %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :devise_name, class:"form-control", placeholder:"デバイス名" %>
          </div>
          <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメント" %>
          <%= f.label :genre_id, "ジャンル" %>
          <div class="select_field">
            <%= f.collection_select :genre_id, Genre.all, :id, :name %>
          </div>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>